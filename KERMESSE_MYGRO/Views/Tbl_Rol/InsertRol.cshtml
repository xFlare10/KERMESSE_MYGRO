@model KERMESSE_MYGRO.Models.tbl_rol

@{
    ViewBag.Title = "InsertRol";
}

<div class="container-fluid">
    <h1 class="mt-4">Gestión de Rol</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="" @Url.Action("Index", "Home") ">Inicio</a></li>
        <li class="breadcrumb-item "><a href="@Url.Action("tbl_rol", "Tbl_Rol")">Gestión de Roles</a></li>
        <li class="breadcrumb-item active">Registrar un rol</li>
    </ol>
    <div class="card mb-4">
        <img src="https://i.imgur.com/BlUJhWk.jpeg" class="card-img-top" alt="rol">

        <div class="card-body">

            <div class="table">

                <h2>Registrando nuevo rol</h2>

                <div style="text-align: right;">
                    <a href="@Url.Action("tbl_rol", "Tbl_Rol")" title="Regresar a la página anterior">
                        <i class="fas fa-arrow-circle-left"></i>
                        Regresar a la página anterior
                    </a><br><br>
                </div>

                @using (Html.BeginForm("InsertRol", "Tbl_Rol", FormMethod.Post))
                {

                    <div class="form-row">
                        <div class="col-md-12">

                            <div class="row">

                                <div class="form-group">
                                    @Html.LabelFor(model => model.rol, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.rol, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.rol, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>

                            <br>

                            <div class="row form-row" style="text-align: center;">

                                <div class="col">
                                    <input class="btn btn-primary btn-block col-md-12" type="submit" value="Registrar rol" />
                                </div>

                                <div class="col">
                                    <input class="btn btn-outline-danger btn-block col-md-12" type="reset" value="Cancelar" />
                                </div>

                            </div>

                            <br>

                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</div>


@model IEnumerable<KERMESSE_MYGRO.Models.tbl_rol>

@{
    ViewBag.Title = "Tbl_Rol";
}


<div class="container-fluid">
    <h1 class="mt-4">Gestión de roles</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
        <li class="breadcrumb-item active">Gestión de roles</li>
    </ol>
    <div class="card mb-4">
        <img src="https://i.imgur.com/BlUJhWk.jpeg" class="card-img-top" alt="roles">

        <div class="card-body">

            <div class="table-responsive">

                <h2>Registro de Roles</h2>

                <div class="row p-4 no-gutters justify-content-between align-items-center">

                    <div class="col-12 col-md-8">
                        <div class="input-group">
                            <input type="text" class="form-control" id="search" placeholder="Buscar rol">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary" type="button">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">

                        <div style="text-align: right;">

                            <a href="@Url.Action("InsertRol", "Tbl_Rol")">
                                <button type="button" class="btn btn-outline-primary btn-md">
                                    <i class="fas fa-plus"></i> &nbsp;Agregar nuevo rol
                                </button>
                            </a>

                        </div>
                    </div>
                </div>

                <table class="table table-bordered table-hover" id="tbl" width="100%" style="text-align: center;" cellspacing="0">

                    <thead class="table-dark">
                        <tr>
                            <th>Rol</th>
                            <th width="20%">Opciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>
                                    @Html.DisplayFor(modelItem => item.rol)
                                </th>

                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                    @Url.Action("EditRol", new { id = item.id_rol } )
                                    @Url.Action("DeleteRol", new { id = item.id_rol } )
                                    *@
                                    <a href=" @Url.Action("EditRol", new { id = item.id_rol } )"
                                       title="Modificar rol">
                                        <button class="btn btn-sm btn-outline-primary rounded-circle">
                                            <i class="fas fa-pencil-alt"></i>
                                        </button>
                                    </a>

                                    &nbsp;&nbsp;

                                    <a href="@Url.Action("DeleteRol", new { id = item.id_rol } )"
                                       title="Eliminar rol">
                                        <button class="btn btn-sm btn-outline-danger rounded-circle">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        }


                    </tbody>
                    <tfoot class="table-dark">
                        <tr>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>

                </table>
            </div>
        </div>
    </div>
</div>


@model IEnumerable<KERMESSE_MYGRO.Models.vw_tasacambiodet>

@{
    ViewBag.Title = "VerTasacambio";
}

<div class="container-fluid">
    <h1 class="mt-4">Gestión de tasa de cambio</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
        <li class="breadcrumb-item "><a href="@Url.Action("tbl_tasacambio", "Tbl_Tasacambio")">Gestión de tasa de cambio</a></li>
        <li class="breadcrumb-item active">Detalles</li>
    </ol>
    <div class="card mb-4">
        <img src="https://miviajeanewyork.files.wordpress.com/2016/02/monedas-banner.jpg?w=1390" class="card-img-top" alt="tasa-de-cambio">

        <div class="card-body">

            <div class="table-responsive">

                <h2>Tasas de cambio</h2>

                <div class="row p-4 no-gutters justify-content-between align-items-center">
                    <div class="col-12 col-md-4">

                        <div style="text-align: left;">

                            <a href="@Url.Action("InsertDet", "Tbl_Tasacambio", new { id = Model.FirstOrDefault().id_tasaCambio })">
                                <button type="button" class="btn btn-outline-primary btn-md">
                                    <i class="fas fa-plus"></i> &nbsp;Agregar detalle
                                </button>
                            </a>

                        </div>
                    </div>
                </div>


                <table class="table table-bordered table-hover" id="tbl" width="100%" style="text-align: center;" cellspacing="0">

                    <thead class="table-dark">
                        <tr>
                            <th>Tasa</th>
                            <th>Fecha</th>
                            <th>Tipo de cambio</th>
                            <th width="20%"> Opciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>
                                    @Html.DisplayFor(model => item.tasa)
                                </th>
                                <th>
                                    @Html.DisplayFor(model => item.fecha)
                                </th>
                                <th>
                                    @Html.DisplayFor(model => item.tipoCambio)
                                </th>

                                <td>
                                    <a href="@Url.Action("EditTasaCambioD", new { id = item.idDet } )"
                                       title="Editar detalles">
                                        <button class="btn btn-sm btn-outline-primary rounded-circle">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </a>

                                    &nbsp;&nbsp;

                                    <a href="@Url.Action("DeleteDet", new { id = item.idDet } )"
                                       title="Eliminar">
                                        <button class="btn btn-sm btn-outline-danger rounded-circle">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
}


                    </tbody>
                    <tfoot class="table-dark">
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>

                </table>
            </div>
        </div>
    </div>
</div>

<div class="form-row" style="text-align: center;">

    <div class="row">
        
        <a href="@Url.Action("Tbl_Tasacambio","tbl_tasacambio")">
            <button type="button" class="btn btn-outline-danger btn-block">
                <i class="fas fa-long-arrow-alt-left"></i> &nbsp;Regresar
            </button>
        </a>

        @*<div class="col">
            <button class="btn btn-primary btn-block" type="submit"> Guardar cambios </button>
        </div>

        <div class="col">
            <input class="btn btn-outline-danger btn-block" type="reset" value="Cancelar" />
        </div>*@
    </div>

</div>
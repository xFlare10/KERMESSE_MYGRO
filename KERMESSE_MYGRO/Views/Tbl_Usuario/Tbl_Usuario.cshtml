@model IEnumerable<KERMESSE_MYGRO.Models.tbl_usuario>

@{
    ViewBag.Title = "Tbl_Usuario";
}

<div class="container-fluid">
    <h1 class="mt-4">Gestión de usuarios</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
        <li class="breadcrumb-item active">Gestión de usuarios</li>
    </ol>
    <div class="card mb-4">
        <img src="https://i.imgur.com/2jvOWIX.jpeg" class="card-img-top" alt="usuarios">

        <div class="card-body">

            <div class="table-responsive">

                <h2>Registro de Usuarios</h2>

                <div class="row p-4 no-gutters justify-content-between align-items-center">

                    <div class="col-12 col-md-8">
                        <div class="input-group">
                            <input type="text" class="form-control" id="search" placeholder="Buscar un usuario">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary" type="button">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">

                        <div style="text-align: right;">

                            <a href="@Url.Action("InsertUsuario")">
                                <button type="button" class="btn btn-outline-primary btn-md">
                                    <i class="fas fa-plus"></i> &nbsp;Agregar nuevo usuario
                                </button>
                            </a>

                        </div>
                    </div>
                </div>

                <table class="table table-bordered table-hover" id="tbl" width="100%" style="text-align: center;" cellspacing="0">

                    <thead class="table-dark">
                        <tr>
                            <th>Usuario</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Email</th>
                            <th width="20%">Opciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <!--<td>
                                @Html.DisplayFor(modelItem => item.id_usuario)
                            </td>-->
                            <td>
                                @Html.DisplayFor(modelItem => item.usuario)
                            </td>
                            <!--<td>
                                @Html.DisplayFor(modelItem => item.pwd)
                            </td>-->
                            <td>
                                @Html.DisplayFor(modelItem => item.nombres)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.apellidos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <!--
                            <td>
                                @Html.DisplayFor(modelItem => item.estado)
                            </td>-->

                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                                <a href="#"
                                   title="Modificar usuario">
                                    <button class="btn btn-sm btn-outline-primary rounded-circle">
                                            <i class="fas fa-pencil-alt"></i>
                                        </button>
                                </a>

                                &nbsp;&nbsp;

                                <a href="#"
                                   title="Eliminar usuario">
                                    <button class="btn btn-sm btn-outline-danger rounded-circle">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                        }


                    </tbody>
                    <tfoot class="table-dark">
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>

                </table>
            </div>
        </div>
    </div>
</div>


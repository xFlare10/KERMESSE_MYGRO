@model IEnumerable<KERMESSE_MYGRO.Models.tbl_rol_usuario>

@{
    ViewBag.Title = "Tbl_Rol_Usuario";
}



<div class="container-fluid">
    <h1 class="mt-4">Gestión de roles por usuarios</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
        <li class="breadcrumb-item active">Gestión de rol usuarios</li>
    </ol>
    <div class="card mb-4">
        <img src="https://i.imgur.com/yzuiCFR.jpeg" class="card-img-top" alt="rolesusuarios">

        <div class="card-body">

            <div class="table-responsive">

                <h2>Listas de roles por usuario</h2>

                <div class="row p-4 no-gutters justify-content-between align-items-center">

                    <div class="col-12 col-md-8">
                        <div class="input-group">
                            <input type="text" class="form-control" id="search" placeholder="Buscar rol o usuario">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary" type="button">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">

                        <div style="text-align: right;">

                            <a href="@Url.Action("VistaInsertRolUsuario", "Tbl_Rol_Usuario")">
                                <button type="button" class="btn btn-outline-primary btn-md">
                                    <i class="fas fa-plus"></i> &nbsp;Asignar rol a usuario
                                </button>
                            </a>

                        </div>
                    </div>
                </div>

                <table class="table table-bordered table-hover" id="tbl" width="100%" style="text-align: center;" cellspacing="0">

                    <thead class="table-dark">
                        <tr>
                            <th>Rol</th>
                            <th>Usuario</th>
                            <th width="20%">Opciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tbl_rol.rol)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tbl_usuario.usuario)
                                </td>

                                <td>

                                    <a href="@Url.Action("DeleteRolUsuario", new { id = item.id_rol_usuario } )"
                                       title="Eliminar rol usuario">
                                        <button class="btn btn-sm btn-outline-danger rounded-circle">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        }


                    </tbody>
                    <tfoot class="table-dark">
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>

                </table>
            </div>
        </div>
    </div>
</div>

